@model DeliciousMeals.Models.Administrator;
@{
    ViewData["Title"] = "Admin Login";
}

<div class="container text-center">

    <h1 class="display-6"> Admin Login </h1>

    <form class="form mt-5" method="get" asp-action="AdminLoginVerification">

        <label for="Email" class="form-label">Email:</label>
        <input asp-for="Email" class="form-control" type="text" id="Email" required />
        <br />
        <label for="Password" class="form-label">Password:</label>
        <input asp-for="Password" class="form-control" type="password" id="Password" required />
        <br />
        <button class="btn btn-primary mt-3 mb-3" type="submit">Login</button>
        <br />
        <a asp-controller="Authentication" asp-action="CreateAdminAccount">Create Account</a>
    </form>
    <br />

    @{
        if (TempData["Response"] != null)
        {
            <div class="alert alert-danger">
                @TempData["Response"]
            </div>
        }
    }

</div>